<header class="position-fixed w-100 bg-light">
    <nav class="container navbar navbar-expand-lg navbar-light ">
        <a class="navbar-brand" href="/">
            <img class="nav-brand__img" src="/icon/favicon.svg" alt="">
        </a>
        
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" style="place-content: space-between" id="navbarSupportedContent">
            <ul class="navbar-nav">
                <li class="nav-item active">
                    <a class="nav-link" href="/">Home <span class="sr-only">(current)</span></a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/products">Sản phẩm</a>
                </li>
            </ul>
            <form id="search-form" class="d-flex mx-5  position-relative" style="flex-grow:1" action="#" method="get">
                <div class="form-group w-100 mb-0">
                    <input type="search" name="input-search" autocomplete="off"  class="form-control" placeholder="Tìm kiếm sản phẩm">
                </div>
                <div id="search-suggest" class="position-absolute" style="left:0; top:100%; right:0; z-index:1">
                </div>
            </form>
           
            <div class="account my-2 my-lg-0">
                {{#if user}} 
                <div class="dropdown open" >
                    <div class="account_info" type="button" id="triggerId" data-toggle="dropdown" aria-haspopup="true"
                            aria-expanded="false">
                        <span class="account_info_usename"><i class="far fa-user"></i></span>
                        <span class="account_info_usename">{{user.fullname}}</span>
                    </div>
                    <div class="dropdown-menu" style="left:auto; right:0;" aria-labelledby="triggerId">
                        <span class="dropdown-item">Thông tin tài khoản</span>
                        <hr>
                        <a class="dropdown-item btn-primary" href="/logout">Đăng xuất</a>
                    </div>
                </div>
                {{else }}
                <div class="dropdown open" >
                    <div class="account_info" type="button" id="triggerId" data-toggle="dropdown" aria-haspopup="true"
                            aria-expanded="false">
                        <span class="account_info_usename"><i class="far fa-user"></i></span>
                    </div>
                    <div class="dropdown-menu" style="left:auto; right:0;" aria-labelledby="triggerId">
                        <a class="dropdown-item btn-primary" href="/login">Đăng nhập</a>
                        <a class="dropdown-item btn-secondery" href="/register">Đăng ký</a>
                    </div>
                </div>
                {{/if}}
            </div>
        </div>
    </nav>
</header>