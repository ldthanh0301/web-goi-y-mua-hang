{{!-- Show detaile product --}}
<div class="product py-4">
    <h5 class="text-primary">Chi tiết sản phẩm</h5>
    <hr>
    <div class="row">
        <div class="col-sm-6 product-image p-4">
            {{!-- <img class="w-100" src="/img/products/{{product.image}}" alt="Ảnh sản phẩm"> --}}
            <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
                <ol class="carousel-indicators">
                    <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
                    <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
                    <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
                </ol>
                <div class="carousel-inner">
                    <div class="carousel-item active">
                    <img class="d-block w-100" src="{{product.images.[0]}}"  alt="First slide">
                    </div>
                    <div class="carousel-item">
                    <img class="d-block w-100" src="{{product.images.[0]}}"  alt="Second slide">
                    </div>
                    <div class="carousel-item">
                    <img class="d-block w-100" src="{{product.images.[0]}}"  alt="Third slide">
                    </div>
                </div>
                <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
                </a>
            </div>
        </div>
        <div class="col-sm-6 product-info mt-5">
            <h2 class="product-info-name">{{product.name}}</h2>
            <span class="product-info-price">
                {{product.price}}
                <span class="product-info-dram">Đ</span>
            </span> 
            <h6>Thông tin sản phẩm</h6>
            <p>{{product.description}}</p>
            <a href="/payment?id={{product._id}}" class="btn btn-primary">Mua ngay</a>
        </div>
    </div>
</div>